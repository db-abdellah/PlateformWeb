<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css?v={random number/string}" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css?v={random number/string}" />
    <link rel="icon" href="~/Images/favicon.ico" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container" style="height:50px">
                <div onclick="Home()" class="HomeDiv" style=" cursor: pointer; padding: 5px; ">
                    <img class="HomeImg" src="~/Images/HomeIcon.png" />
                    <h5 class="HomeLabel">Home</h5>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <a class="btn LogoutBtn" asp-controller="Login" asp-action="Logout">Log out</a>


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Ensa Agadir
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        function Home() {
            var baseUrl = "@Url.Action("Index","login")";
            window.location.href = baseUrl;
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>